@page "/yeelight"
@using RpiHomeHub.BlazorWeb.Lights.Models
@using RpiHomeHub.BlazorWeb.Lights.Components
@using RpiHomeHub.BlazorWeb.Colors.Components

<h1>Yeelight control</h1>

<div class="row">
    <div class="col-md-12 col-lg-6 col-xl-4">
        <LightControlsComponent
            Light=@Yeelight
            LightService=@YeelightService 
            TLightModel="YeelightModel">

            <YeelightExtendedControls Yeelight="@Yeelight" />
        </LightControlsComponent>
    </div>
    <div class="col">
        @if (Yeelight is not null)
        {
            <ColorPicker
                Light="@Yeelight"
                LightService="@YeelightService"
                TLightModel="YeelightModel"
                RefreshEvent="Load" />
        }
    </div>
</div>
