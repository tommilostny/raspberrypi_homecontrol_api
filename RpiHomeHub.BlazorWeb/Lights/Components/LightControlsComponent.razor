@typeparam TLightModel

<CardComponent>
    @if (Light is not null)
    {
        <div class="row">
            <div class="col-lg">
                <p>Power: <strong>@Light.Power</strong></p>
                <p>Brightness: <strong>@(@Light.Brightness)%</strong></p>
                <p>Color: (<strong>@Light.Color.Red, @Light.Color.Green, @Light.Color.Blue</strong>)</p>
                
                <button class="btn btn-primary" @onclick="@Service.ToggleAsync">Toggle</button>
                <button class="btn btn-success" @onclick="@Service.TurnOnAsync">Turn on</button>
                <button class="btn btn-danger" @onclick="@Service.TurnOffAsync">Turn off</button>
            </div>
            <div class="col-lg">
                <!--ColorPicker-->
            </div>
        </div>
    }
    else
    {
        <p>Loading...</p>
    }
</CardComponent>
